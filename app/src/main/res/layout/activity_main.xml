<?xml version="1.0" encoding="utf-8"?>
<ContraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vbermudez.floatingwidgets.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <SearchView
            android:id="@+id/search_word"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:iconifiedByDefault="false"
            android:padding="0dp"
            android:queryHint="BuscÃ¡ una palabra..."
            android:textAlignment="textStart">
        </SearchView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginTop="-3.2dp"
        android:background="#00000000">
        <ProgressBar
            android:id="@+id/word_cards_loading"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryDarkColor"
            android:layout_marginTop="-3.2dp"
            android:padding="0dp"
            android:visibility="invisible"
            android:backgroundTint="#00000000"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="-3.2dp">

        <LinearLayout
            android:id="@+id/definition_list"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:elevation="7dp"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:menu="@menu/bottom_navigation"
            app:itemBackground="@color/primaryColor"
            app:itemIconTint="@android:color/white"
            app:itemTextColor="@android:color/white" />
    </FrameLayout>
</ContraintLayout>